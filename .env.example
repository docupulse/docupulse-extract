# ── Database (same PostgreSQL as DocuPulse API) ──
# Option A: single connection string
DATABASE_URL=postgresql://user:password@myserver.postgres.database.azure.com:5432/docupulse?sslmode=require
# Option B: individual fields (used if DATABASE_URL is not set)
# DB_HOST=myserver.postgres.database.azure.com
# DB_PORT=5432
# DB_NAME=docupulse
# DB_USER=docupulseDbAdmin
# DB_PASSWORD=...

# ── Azure Blob Storage ──
# Option A: full connection string
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...;AccountKey=...;EndpointSuffix=core.windows.net
# Option B: individual fields (used if AZURE_STORAGE_CONNECTION_STRING is not set)
# AZURE_ACCOUNT_NAME=docupulsedevsa
# AZURE_ACCOUNT_KEY=...

# ── Azure Container Instances ──
RESOURCE_GROUP=docling-rg
ACR_NAME=doclingacr

# ── Extraction Pipeline ──
BATCH_SIZE=50
STRATEGY_NAME=docling
MAX_PAGES=3
MAX_FILE_SIZE_MB=50
FILE_TYPES=pdf,docx,doc,pptx,xlsx,xls,html
SOURCE_STATUS=UNINDEXED
COMPLETION_STATUS=PREVIEW
# LITE_MODE: true = fast text-only (no OCR, no table detection), false = full extraction
LITE_MODE=true

# ── Runtime ──
USE_GPU=true
LOG_LEVEL=INFO
WORKSPACE_ID=
GPU_SKU=T4
LOCATION=eastus
